   image:"https://static.wikia.nocookie.net/lookism/images/3/35/Sinu_Han.png"},

  // First Gen
  {name:"Gun Park", gender:"Male", generation:"Gen 1", affiliation:"Workers", style:"Martial Arts", hair:"Black", age:"Adult",
   image:"https://static.wikia.nocookie.net/lookism/images/4/4f/Gun_Park.png"},
  {name:"Goo Kim", gender:"Male", generation:"Gen 1", affiliation:"Workers", style:"Weapons", hair:"Blonde", age:"Adult",
   image:"https://static.wikia.nocookie.net/lookism/images/3/3e/Goo_Kim.png"},
  {name:"Tom Lee", gender:"Male", generation:"Gen 1", affiliation:"WTJC", style:"Street", hair:"Gray", age:"Middle-aged",
   image:"https://static.wikia.nocookie.net/lookism/images/7/7f/Tom_Lee.png"},

