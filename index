<h1>LOOKISMDLE</h1>
<p>Select a character, see the image, then guess</p>

<select id="guessSelect" onchange="showPreview()">
  <option value="">Select character</option>
</select>

<div id="preview"></div>

<button onclick="makeGuess()">Guess</button>

<table id="resultTable">
<tr>
  <th>Image</th>
  <th>Name</th>
  <th>Gender</th>
  <th>Generation</th>
  <th>Affiliation</th>
  <th>Style</th>
  <th>Hair</th>
  <th>Age</th>
</tr>
</table>

<script>
const characters = [
