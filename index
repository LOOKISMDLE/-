  {name:"Manager Kim", gender:"Male", generation:"Gen 0", affiliation:"WTJC", style:"Military", hair:"Black", age:"Middle-aged",
   image:"https://static.wikia.nocookie.net/lookism/images/e/e4/Manager_Kim.png"},
  {name:"Charles Choi", gender:"Male", generation:"Gen 0", affiliation:"HNH Group", style:"Unknown", hair:"Black", age:"Middle-aged",
   image:"https://static.wikia.nocookie.net/lookism/images/6/63/Charles_Choi.png"}
];

let answer = randomCharacter();

const select = document.getElementById("guessSelect");
characters.forEach(c => {
  const opt = document.createElement("option");
  opt.value = c.name;
  opt.textContent = c.name;
  select.appendChild(opt);
});

function randomCharacter() {
  return characters[Math.floor(Math.random() * characters.length)];
}

function showPreview() {
  const name = select.value;
  const preview = document.getElementById("preview");
  preview.innerHTML = "";
  if (!name) return;

  const c = characters.find(x => x.name === name);
  const img = document.createElement("img");
  img.src = c.image;
  preview.appendChild(img);
}

function colorCell(cell, g, a) {
  cell.className = (g === a) ? "green" : "gray";
}

function makeGuess() {
  const name = select.value;
  if (!name) return;

  const g = characters.find(c => c.name === name);
  const row = resultTable.insertRow();

  const img = document.createElement("img");
  img.src = g.image;
  img.className = "char";
  row.insertCell().appendChild(img);

  row.insertCell().textContent = g.name;

  ["gender","generation","affiliation","style","hair","age"].forEach(k => {
    const cell = row.insertCell();
    cell.textContent = g[k];
    colorCell(cell, g[k], answer[k]);
  });

  if (g.name === answer.name) {
    setTimeout(() => {
      alert("ðŸŽ‰ Correct! New character selected.");
      answer = randomCharacter();
      resultTable.innerHTML = `
        <tr>
          <th>Image</th><th>Name</th><th>Gender</th><th>Generation</th>
          <th>Affiliation</th><th>Style</th><th>Hair</th><th>Age</th>
        </tr>`;
    }, 100);
  }
}
</script>

